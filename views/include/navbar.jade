header#main-menu.navbar.navbar-default(role="banner", class=pageName)
    .container
        .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='#main-nav')
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a#logo.navbar-brand.header(href='/')=title

        if pageName !== 'login'
            nav#main-nav.collapse.navbar-collapse(role='navigation')
                ul.nav.navbar-nav.navbar-right
                    li(class=pageName === 'dashboard' ? 'active' : '' )
                        a(href=route.INDEX) Dashboard
                    if role.can('get cards')
                        li(class=pageName === 'cards' ? 'active' : '' )
                            a(href=route.CARDS_PAGE) Cards
                    if role.can('get issuers')
                        li(class=pageName === 'issuers' ? 'active' : '' )
                            a(href=route.ISSUERS_PAGE) Issuers
                    if role.can('get users')
                        li(class=pageName === 'users' ? 'active' : '' )
                            a(href=route.USERS_PAGE) Users
                    li(class=pageName === 'accounts' ? 'active' : '' )
                        a(href=route.ACCOUNTS_PAGE) Accounts
                    li
                        a(href=route.LOGOUT) Logout

