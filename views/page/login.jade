extends ../layout

block content
    form#login(method='POST')
        .row
            .col-md-4.col-md-offset-4
                if errorMsg
                    .alert.alert-danger= errorMsg
                .form-group
                    label(for='input-login') Login
                    input#input-login.form-control(type='text', name='login')
                .form-group
                    label(for='input-password') Password
                    input#input-password.form-control(type='password', name='password')
        .row
            .col-md-12.center.offset-top
                button.btn.btn-success(type='submit') Enter site