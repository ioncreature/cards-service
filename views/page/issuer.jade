extends ../layout

block content
    form(role='form', method='POST', action=postUrl)
        .row
            .col-md-5
                h3 Common data
                input(type='hidden', name='id' value=_id)
                .form-group
                    label(for='issuer-name') Issuer name
                    input#issuer-name.form-control(type='text', name='name', value=name)
                .form-group
                    label(for='issuer-desc') Description
                    input#issuer-desc.form-control(type='text', name='description', value=description)
                .form-group
                    label(for='issuer-url') Web site URL
                    input#issuer-url.form-control(type='text', name='url', value=url)
                .form-group
                    label(for='issuer-phone') Phone number
                    input#issuer-phone.form-control(type='text', name='phone', value=phone)
                .form-group
                    label(for='issuer-address') Address
                    input#issuer-address.form-control(type='text', name='address', value=address)
            .col-md-5.col-md-offset-2
                .raw-fluid
                    .col-xs-6
                        h3 Card types
                    .col-xs-6
                        button#addType.btn.btn-default
                            span.glyphicon.glyphicon-plus
                            | Add card type

        .row
            .col-md-12
                button.btn.btn-success(type='submit')=submitCaption

