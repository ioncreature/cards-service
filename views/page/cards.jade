extends ../layout

block content
    .table-responsive
        table.table.table-striped
            tr
                th City
                th Issuer
                th Is full
                th Edit
            each card in cards
                - var cardUrl = formatUrl( route.CARD_PAGE, {id: card._id} )
                tr
                    td= card.city
                    td= card.issuerName
                    td
                        if card.full
                            span.glyphicon.glyphicon-plus
                        else
                            span.glyphicon.glyphicon-minus
                    td
                        a(href=cardUrl) edit
